{
  "name": "@ai-sdk-tools/root",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run build:debug && bun run build:store && bun run build:artifacts && bun run build:devtools && bun run build:memory && bun run build:agents && bun run build:cache && bun run build:ai-sdk-tools",
    "build:store": "cd packages/store && bun run build",
    "build:artifacts": "cd packages/artifacts && bun run build",
    "build:devtools": "cd packages/devtools && bun run build",
    "build:memory": "cd packages/memory && bun run build",
    "build:agents": "cd packages/agents && bun run build",
    "build:cache": "cd packages/cache && bun run build",
    "build:ai-sdk-tools": "cd packages/ai-sdk-tools && bun run build",
    "build:example": "bun run build && cd apps/example && bun run build",
    "build:debug": "cd packages/debug && bun run build",
    "dev": "bun run -r --filter='@fondation-io/store' --filter='@fondation-io/devtools' --filter='@fondation-io/artifacts' --filter='@fondation-io/agents' --filter='@fondation-io/chrome-extension' dev",
    "dev:beta": "bun run -r --filter='@fondation-io/store' --filter='@fondation-io/devtools' --filter='@fondation-io/artifacts' --filter='@fondation-io/agents' dev",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "node scripts/pre-publish.js prepare && changeset publish && node scripts/pre-publish.js restore",
    "changeset:beta": "changeset pre enter beta",
    "changeset:exit-beta": "changeset pre exit",
    "version-packages:beta": "changeset version --snapshot beta",
    "release:beta": "node scripts/pre-publish.js prepare && changeset publish && node scripts/pre-publish.js restore",
    "clean": "bun run -r --filter='@fondation-io/store' --filter='@fondation-io/devtools' --filter='@fondation-io/artifacts' --filter='@fondation-io/agents' --filter='@fondation-io/chrome-extension' clean",
    "clean:beta": "bun run -r --filter='@fondation-io/store' --filter='@fondation-io/devtools' --filter='@fondation-io/artifacts' --filter='@fondation-io/agents' clean",
    "type-check": "bun run -r --filter='@fondation-io/store' --filter='@fondation-io/devtools' --filter='@fondation-io/artifacts' --filter='@fondation-io/agents' --filter='@fondation-io/chrome-extension' type-check",
    "type-check:beta": "bun run -r --filter='@fondation-io/store' --filter='@fondation-io/devtools' --filter='@fondation-io/artifacts' --filter='@fondation-io/agents' type-check",
    "dev:setup": "node scripts/pre-publish.js restore && bun install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@changesets/cli": "^2.29.7"
  }
}
